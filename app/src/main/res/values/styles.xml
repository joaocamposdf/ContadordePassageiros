<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">45sp</item>
        <item name="android:background">@color/textBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PortraitButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/buttonsBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LeftButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/buttonsBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RightButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/buttonsBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AdditionalButtons">
        <!--<item name="android:layout_margin">8dp</item>-->
        <item name="android:background">@color/buttonsBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
