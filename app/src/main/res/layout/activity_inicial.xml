<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.android.contadordepassageiros.InicialActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_gol_nome" />

        </android.support.v7.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalhes" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="16dp">

          <LinearLayout
              android:id="@+id/dados_voo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
           <EditText
               android:id="@+id/voo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Voo"
               android:inputType="number"
               android:textSize="30sp"
               android:padding="16dp"/>

           <EditText
               android:id="@+id/origem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Origem"
               android:inputType="number"
               android:textSize="30sp"
               android:padding="16dp"/>

           <EditText
               android:id="@+id/destino"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Destino"
               android:inputType="text"
               android:textSize="30sp"
               android:padding="16dp"
               />
          </LinearLayout>

           <TextView
               android:id="@+id/adultos"
               android:layout_below="@id/dados_voo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Adultos:"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/contagem_adultos"
               android:layout_toEndOf="@id/adultos"
               android:layout_below="@id/dados_voo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/colos"
               android:layout_below="@id/adultos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Colos:"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/contagem_colos"
               android:layout_toEndOf="@id/colos"
               android:layout_below="@id/contagem_adultos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/extras"
               android:layout_below="@id/colos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Extras:"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/contagem_extras"
               android:layout_toEndOf="@id/extras"
               android:layout_below="@id/contagem_colos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="30sp"/>

           <TextView
               android:id="@+id/cmte"
               android:layout_below="@id/extras"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Cmte:"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/menosCmte"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="-"
               android:textSize="20sp"
               android:layout_toEndOf="@id/cmte"
               android:layout_below="@id/contagem_extras"/>

           <TextView
               android:id="@+id/contagem_cmte"
               android:layout_toEndOf="@id/menosCmte"
               android:layout_below="@id/contagem_extras"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/maisCmte"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="+"
               android:textSize="20sp"
               android:layout_toEndOf="@id/contagem_cmte"
               android:layout_below="@id/contagem_extras"/>

           <TextView
               android:id="@+id/cop"
               android:layout_below="@id/cmte"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Cop:"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/menosCop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="-"
               android:textSize="20sp"
               android:layout_toEndOf="@id/cop"
               android:layout_below="@id/menosCmte"/>

           <TextView
               android:id="@+id/contagem_cop"
               android:layout_toEndOf="@id/menosCop"
               android:layout_below="@id/contagem_cmte"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/maisCop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="+"
               android:textSize="20sp"
               android:layout_toEndOf="@id/contagem_cop"
               android:layout_below="@id/contagem_cmte"/>


           <TextView
               android:id="@+id/cms"
               android:layout_below="@id/cop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="Cms:"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/menosCms"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="-"
               android:textSize="20sp"
               android:layout_toEndOf="@id/cms"
               android:layout_below="@id/menosCop"/>

           <TextView
               android:id="@+id/contagem_cms"
               android:layout_toEndOf="@id/menosCms"
               android:layout_below="@id/contagem_cop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="0"
               android:textSize="20sp"/>

           <Button
               android:id="@+id/maisCms"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="+"
               android:textSize="20sp"
               android:layout_toEndOf="@id/contagem_cms"
               android:layout_below="@id/contagem_cop"/>


       </RelativeLayout>


</LinearLayout>
</LinearLayout>